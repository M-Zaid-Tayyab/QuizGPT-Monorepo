{
  "expo": {
    "name": "QuizGPT",
    "slug": "QuizGPT",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/ios-icon.png",
    "scheme": "quizgpt",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.quizgpt",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSPhotoLibraryUsageDescription": "This app accesses your photo library to allow selecting files and images for generating quizzes and flashcards.",
        "NSCameraUsageDescription": "This app uses the camera to scan documents or images for generating quizzes and flashcards.",
        "NSMicrophoneUsageDescription": "Microphone access is used for optional audio features during study sessions.",
        "NSDocumentsFolderUsageDescription": "This app accesses your documents for uploading study materials."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.quizgpt",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/icons/icon.png"
    },
    "plugins": [
      "@react-native-firebase/app",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          },
          "android": {
            "targetSdkVersion": 35,
            "compileSdkVersion": 35,
            "buildToolsVersion": "35.0.0"
          }
        }
      ],
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/icons/splash.png",
          "resizeMode": "cover",
          "backgroundColor": "#ffffff",
          "imageWidth": 200,
          "dark": {
            "image": "./assets/icons/splash.png",
            "resizeMode": "cover",
            "backgroundColor": "#000000",
            "imageWidth": 200
          }
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Nunito-Regular.ttf",
            "./assets/fonts/Nunito-Bold.ttf",
            "./assets/fonts/Nunito-ExtraBold.ttf",
            "./assets/fonts/Nunito-SemiBold.ttf",
            "./assets/fonts/Nunito-Light.ttf"
          ]
        }
      ],
      "expo-web-browser",
      "expo-audio"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "8d9c1b42-a589-43da-8463-2a1932933d1f"
      }
    },
    "owner": "expo_new_dev",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/8d9c1b42-a589-43da-8463-2a1932933d1f"
    }
  }
}
